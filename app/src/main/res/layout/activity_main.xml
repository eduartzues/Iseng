<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/weather"
    >
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.keven.percobaan.MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List Weather"
        android:textColor="#0EF1F5"
        android:textSize="50dp"
        android:layout_gravity="center"
         />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">


        <ImageView
            android:layout_weight="1"
            android:src="@drawable/a1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:onClick="goTo1"/>

        <ImageView
            android:layout_weight="1"
            android:src="@drawable/a2"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:onClick="goTo2"/>

        <ImageView
            android:layout_weight="1"
            android:src="@drawable/a3"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:onClick="goTo3"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <ImageView
            android:layout_weight="1"
            android:src="@drawable/a4"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:onClick="goTo4"/>

        <ImageView
            android:layout_weight="1"
            android:src="@drawable/a5"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:onClick="goTo5"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <ImageView
            android:layout_weight="1"
            android:src="@drawable/fb"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:onClick="goTof"/>

        <ImageView
            android:layout_weight="1"
            android:src="@drawable/ig"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:onClick="goToi"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <ImageView
            android:layout_weight="1"
            android:src="@drawable/tw"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:onClick="goTot"/>

        <ImageView
            android:layout_weight="1"
            android:src="@drawable/yt"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:onClick="goToy"/>


    </LinearLayout>

</LinearLayout>
</ScrollView>